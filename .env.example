# ============================================================
# ProfessorAI - Environment Configuration
# Copy this file to .env and fill in your actual values
# ============================================================

# ============================================================
# REDIS CONFIGURATION (Upstash)
# ============================================================
# Your Upstash Redis URL (rediss:// for SSL)
REDIS_URL=rediss://default:YOUR_PASSWORD@YOUR_ENDPOINT.upstash.io:6379

# Or if you prefer separate values:
# REDIS_HOST=YOUR_ENDPOINT.upstash.io
# REDIS_PORT=6379
# REDIS_PASSWORD=YOUR_PASSWORD
# REDIS_DB=0
# REDIS_USE_SSL=True

# ============================================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ============================================================
USE_DATABASE=True
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/profai?sslmode=require

# ============================================================
# API KEYS (Required)
# ============================================================
OPENAI_API_KEY=sk-proj-...
SARVAM_API_KEY=...
GROQ_API_KEY=...
ELEVENLABS_API_KEY=...

# ============================================================
# CHROMADB CLOUD (Vector Database)
# ============================================================
USE_CHROMA_CLOUD=True
CHROMA_CLOUD_API_KEY=...
CHROMA_CLOUD_TENANT=...
CHROMA_CLOUD_DATABASE=...

# ============================================================
# SERVER CONFIGURATION
# ============================================================
HOST=0.0.0.0
PORT=5001
DEBUG=False

# ============================================================
# CORS (Optional)
# ============================================================
CORS_ALLOWED_ORIGINS=*
